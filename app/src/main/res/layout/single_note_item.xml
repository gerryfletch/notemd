<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/note_meta_container"
    android:layout_marginBottom="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:elevation="1dp"
    android:translationZ="3dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/rowTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:maxLines="1"
        android:textColor="@color/darkGray"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="10dp" />

    <TextView
        android:id="@+id/createdAtLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rowTitle"
        android:fontFamily="@font/roboto_regular"
        android:maxLines="1"
        android:text="@string/created_label"
        android:textColor="@color/lightGray"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/createdAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintLeft_toRightOf="@id/createdAtLabel"
        app:layout_constraintTop_toBottomOf="@id/rowTitle"
        android:maxLines="1"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/gray"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/modifiedAtLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintRight_toLeftOf="@id/modifiedAt"
        app:layout_constraintTop_toBottomOf="@id/rowTitle"
        android:maxLines="1"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/modified_label"
        android:textColor="@color/lightGray"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/modifiedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rowTitle"
        android:maxLines="1"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/gray"
        android:textSize="12sp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>


